{
  "name": "agenda-pimpinan-fullstack",
  "version": "1.0.0",
  "description": "Full-stack application for leadership agenda management",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon src/app.js",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:frontend",
    "start": "node src/app.js",
    "start:frontend": "cd frontend && npm start",
    "migrate": "node src/database/migrate.js",
    "seed": "node src/database/seed.js",
    "add-dummy-agenda": "node src/database/add-dummy-agenda.js",
    "add-user2-agenda": "node src/database/add-user2-agenda.js",
    "add-dummy-users": "node src/database/add-dummy-users.js",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up -d"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.6",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.7"
  },
  "keywords": [
    "agenda",
    "leadership",
    "management",
    "nodejs",
    "express",
    "postgresql",
    "react",
    "nextjs",
    "shadcn-ui"
  ],
  "author": "",
  "license": "MIT"
}
